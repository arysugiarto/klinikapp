<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".activity.DetailBookingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_booking_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_detail_booking"
                        android:layout_width="match_parent"
                        android:src="@drawable/klinik"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_nama_klinik_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amanah Raya"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_dokter_klinik_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginRight="20dp"
                        android:text="Dr.Zacky"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="13dp">
                        <TextView
                            android:id="@+id/tv_jenis_klinik_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poliklinik Gigi"
                            android:textColor="@color/blue"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location" />
                        <TextView
                            android:id="@+id/tv_alamat_klinik_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:text="Sekeloa Utara"
                            android:textColor="@color/blue"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="13dp">
                        <TextView
                            android:id="@+id/date_detail_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat Dec 01,2018 16:30-19:00 PM"
                            android:textColor="@color/blue"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nama_antrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Antrian Ke"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tv_nomor_antrian_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/tv_nama_klinik_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    app:cardBackgroundColor="#F4F4F4"
                    tools:cardCornerRadius="4dp">
                    <TextView
                        android:id="@+id/tv_nama_klinik"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:shadowRadius="3"
                        android:gravity="center"
                        android:text="Jam Masuk 18:30-18:55"
                        android:textColor="#C8D5E8"
                        android:textSize="14dp" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    app:cardBackgroundColor="#F4F4F4"
                    tools:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="center"
                            android:shadowRadius="3"
                            android:text="Kasih Rating :"
                            android:textColor="#C8D5E8"
                            android:textSize="14dp" />
                        <RatingBar
                            android:theme="@style/RatingBar"
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:max="5"
                            android:numStars="5"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:stepSize="0.1"
                            android:transformPivotX="100dp"
                            android:transformPivotY="20dp" />
                    </LinearLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    app:cardBackgroundColor="#F4F4F4"
                    android:visibility="gone"
                    tools:cardCornerRadius="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:shadowRadius="3"
                        android:gravity="center"
                        android:text="Feedback Pelayan Terbaik"
                        android:textColor="#C8D5E8"
                        android:textSize="14dp" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/history_booking"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnhistory"
                    android:textColor="@color/white"
                    android:text="Lihat history booking"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>
