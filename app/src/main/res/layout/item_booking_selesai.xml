<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_klinik_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_image_klinik_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/iv_klinik_booking"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/klinik_dummy"
                        android:scaleType="centerCrop" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_type_klinik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klinik Gigi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="4dp"/>

                <TextView
                    android:id="@+id/tv_nama_klinik_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poliklinik Amanah Raya"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_margin="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_dokter_klinik_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Apung Sud -"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/tv_jadwal_dokter_klinik_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kamis"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_alamat_klinik_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekeloa Utara No.11"
                    android:drawableLeft="@drawable/ic_location"
                    android:textSize="12sp"
                    android:layout_margin="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/tv_antrian_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saat ini anda antrian selesai"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>